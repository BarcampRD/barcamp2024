---
import { speakers } from '../../data/speakers';
import Title from "../shared/Title.astro";
---

<section id="speakers" class="p-8 md:px-16 lg:px-32 grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- TÃ­tulo centrado -->
    <div class="col-span-1 md:col-span-3 lg:col-span-3 text-center mb-6">
        <h1 class="text-2xl md:text-3xl font-semibold text-heading-2">
            Charlistas
        </h1>
    </div>

    <!-- Charla Magistral (degradado amarillo y rol centrado) -->
    <div class="col-span-1 md:col-span-3 lg:col-span-3 bg-white shadow-lg rounded-lg border-4 border-[#F6C23D] hover:scale-105 transform transition-all duration-300 mx-auto max-w-5xl">
        <div class="relative h-[300px] w-full">
            <img src={speakers[0].imageUrl} alt={speakers[0].name} class="w-full h-full object-contain" />
        </div>
        <div class="p-6 text-center"> <!-- Texto centrado -->
            <h2 class="text-2xl font-bold text-indigo-600">{speakers[0].name}</h2>
            <p class="mt-2 text-gray-600 text-md">{speakers[0].title}</p>
            <span class="inline-block mt-4 px-6 py-2 text-white bg-gradient-to-r from-[#F6E05E] via-[#F6C23D] to-[#D29B20] rounded-full text-lg">
                {speakers[0].role}
            </span>
        </div>
    </div>

    <!-- Otras tarjetas (degradado azul) -->
    {speakers.slice(1).map((speaker) => (
            <div class="bg-transparent shadow-lg rounded-lg overflow-hidden hover:scale-105 transform transition-all duration-300 border border-gray-300">
                <div class="relative h-[200px] w-full">
                    <img src={speaker.imageUrl} alt={speaker.name} class="w-full h-full object-contain" />
                </div>
                <div class="p-6">
                    <h2 class="text-lg md:text-xl font-semibold text-heading-2">{speaker.name}</h2>
                    <p class="text-lg md:text-xl font-semibold text-heading-2" style="font-size: 0.875rem;">{speaker.title}</p>
                    <span class="inline-block mt-2 px-3 py-1 text-sm text-white bg-gradient-to-r from-[#00CBFE] via-[#008CF1] to-[#002B4A] rounded-full">
                    {speaker.role}
                </span>
                </div>
            </div>
    ))}
</section>
